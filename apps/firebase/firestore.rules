rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // レースデータ：認証済みユーザーのみ読み取り可能
    match /races/{raceId} {
      allow read: if request.auth != null;
      allow write: if false; // Cloud Functionsからのみ書き込み可能
      
      // JRDBデータサブコレクション：認証済みユーザーのみ読み取り可能
      match /jrdb_data/{dataType} {
        allow read: if request.auth != null;
        allow write: if false; // Cloud Functionsからのみ書き込み可能
        
        // JRDBデータレコードサブコレクション
        match /records/{recordId} {
          allow read: if request.auth != null;
          allow write: if false; // Cloud Functionsからのみ書き込み可能
        }
      }
    }
    
    // ユーザープロフィール：本人のみ読み書き可能
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 管理者専用コレクション
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.role == 'admin';
    }
    
    // Functions実行ログ（functions_logコレクション）：認証済みユーザーは読み取り可能、クライアント側からの書き込みは禁止
    // Cloud FunctionsはAdmin SDKを使用するため、セキュリティルールをバイパスして書き込み可能
    match /functions_log/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // Cloud Functionsからの書き込みはAdmin SDKで実行（セキュリティルールをバイパス）
    }
    
    // 予測結果（predictionsコレクション）：認証済みユーザーは読み取り可能、Cloud Functionsからのみ書き込み可能
    match /predictions/{predictionId} {
      allow read: if request.auth != null;
      allow write: if false; // Cloud FunctionsまたはAdmin SDKからのみ書き込み可能
    }
    
    // その他のドキュメントは認証済みユーザーのみ読み取り可能
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
