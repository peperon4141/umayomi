{
  "name": "functions",
  "version": "1.0.0",
  "description": "Umayomi Cloud Functions",
  "main": "lib/src/index.js",
  "scripts": {
    "dev": "pnpm run build:watch",
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "prepare": "playwright install chromium",
    "serve": "pnpm run build && firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy:dry-run": "pnpm run build && firebase deploy --config ../firebase.json --only functions --dry-run",
    "test:scraping": "tsx scripts/testJraScraping.ts",
    "test:scraping:firestore": "tsx scripts/testJraScrapingWithFirestore.ts",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/cheerio": "^1.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "firebase-functions-test": "^3.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "private": true
}
