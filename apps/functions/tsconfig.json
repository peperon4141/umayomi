{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/utils",
    "tests",
    "scripts",
    "*.ts"
  ]
}
