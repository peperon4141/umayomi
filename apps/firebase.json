{
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "ignore": [
      "src/**",
      "tests/**",
      "scripts/**",
      "*.ts",
      "*.ts.map",
      "*.test.ts",
      "*.spec.ts",
      "tsconfig.json",
      "vitest.config.ts",
      "eslint.config.js",
      ".eslintignore",
      ".turbo/**",
      "firebase-debug.log",
      "*.log",
      "node_modules/**"
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast1",
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "hosting": {
    "public": "hosting/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5101,
      "host": "127.0.0.1"
    },
    "auth": {
      "port": 9199,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8180,
      "host": "127.0.0.1"
    },
    "storage": {
      "port": 9198,
      "host": "127.0.0.1"
    },
    "hosting": {
      "port": 5100,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4100,
      "host": "127.0.0.1"
    },
    "singleProjectMode": true,
    "hub": {
      "port": 4600,
      "host": "127.0.0.1"
    }
  }
}
